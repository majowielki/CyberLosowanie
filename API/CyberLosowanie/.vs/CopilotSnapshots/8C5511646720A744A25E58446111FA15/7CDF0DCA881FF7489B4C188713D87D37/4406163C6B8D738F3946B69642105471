using CyberLosowanie.Models;
using CyberLosowanie.Models.Dto;

namespace CyberLosowanie.Interfaces.Services
{
    public interface ICyberekService
    {
        Task<IEnumerable<Cyberek>> GetAllCyberkiAsync();
